extends layout

block content
  canvas#myChart.my-4.w-100(width='900', height='380')
  h2 Issues
  .table-responsive.table-borderless.table-sm.table-hover
    table
      thead
        tr
          th Creator
          th Key
          th Summary
          th Progress
          th Total
          
      tbody
        each issue, i in issues
          tr
            td
              a(href="#")= issue.fields.creator.displayName
            td= issue.key
            td= issue.fields.summary
            td= issue.fields.progress.progress
            td= issue.fields.progress.total
